{
  "name": "MyDashboard",
  "version": "1.0.0",
  "type": "desktop",
  "framework": "Ludwig Desktop Framework",
  "entry_point": "main.ludwig",
  "dependencies": {
    "ludwig_desktop": "^1.0.0"
  },
  "build": {
    "target": "desktop",
    "platforms": [
      "windows",
      "macos",
      "linux"
    ],
    "output_dir": "dist"
  },
  "app": {
    "title": "MyDashboard",
    "width": 1000,
    "height": 700,
    "resizable": true,
    "center": true
  }
}